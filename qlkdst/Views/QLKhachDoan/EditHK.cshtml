@model qlkdstDB.Data.ViewModel.hangkhongViewModal

<script>

    $(function () { // will trigger when the document is ready
        $('.date-picker').datepicker({ dateFormat: 'dd/mm/yy' });

    });

</script>

<script src="~/Scripts/script-custom-validator.js"></script>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Sửa thông tin hàng không
            </div>
            <div class="panel-body">
                <div class="row">
                    <form id="frmHK">

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model => model.idtour)
                        @Html.HiddenFor(model => model.sgtcode)

                        <input type="hidden" id="hideditid" value="@Model.id" />
                        <input type="hidden" id="hidaddtourid" value="@Model.idtour" />
                        <input type="hidden" id="hidaddsgtcode" value="@Model.sgtcode" />
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label for="areaname">   Mã nhà cung cấp:</label>
                                @Html.TextBoxFor(model => model.mancc, new { @class = "form-control", @id = "txmancc" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="areaname">   Tên nhà cung cấp:</label>
                                @Html.TextBoxFor(model => model.tenncc, new { @class = "form-control", @id = "txtenncc" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="actionnm">   Dịch vụ:</label>
                                @Html.DropDownList("iddv", null, "--Chọn--", new { @class = "form-control1", @id = "txdichvu" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="controllernm">   Hành trình:</label>
                                @Html.TextBoxFor(model => model.hanhtrinh, new { @id = "txhanhtrinh", @class = "form-control" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="controllernm">   Code booking:</label>
                                @Html.TextBoxFor(model => model.codebooking, new { @id = "txcode", @class = "form-control" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="actionnm">   Loại booking:</label>
                                @Html.TextBoxFor(model => model.loaibooking, new { @id = "txloaibooking", @class = "form-control" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="actionnm">  Số chỗ xuất vé:</label>
                                @Html.TextBoxFor(model => model.sochoxuatve, new { @class = "form-control numbers", @id = "txsochoxuatve" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="actionnm">  Tiền cọc phạt:</label>
                                @Html.TextBoxFor(model => model.tiencocphat, new { @class = "form-control numbers", @id = "txtiencocphat" })
                                <p class="help-block"> </p>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-6">

                            <div class="form-group">
                                <label for="actionnm">  Chỗ cọc 1:</label>
                                @Html.TextBoxFor(model => model.chococ1, new { @class = "form-control numbers", @id = "txchococ1" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="areaname">  Tiền cọc lần 1:</label>
                                @Html.TextBoxFor(model => model.tiencoc1, new { @class = "form-control numbers", @id = "txtiencoc1" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="actionnm">  Chỗ cọc 2:</label>
                                @Html.TextBoxFor(model => model.chococ2, new { @class = "form-control numbers", @id = "txchococ2" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="areaname">  Tiền cọc lần 2:</label>
                                @Html.TextBoxFor(model => model.tiencoc2, new { @class = "form-control numbers", @id = "txtiencoc2" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="actionnm">  Chỗ cọc 3:</label>
                                @Html.TextBoxFor(model => model.chococ3, new { @class = "form-control numbers", @id = "txchococ3" })
                                <p class="help-block"> </p>
                            </div>
                            <div class="form-group">
                                <label for="areaname">  Tiền cọc lần 3:</label>
                                @Html.TextBoxFor(model => model.tiencoc3, new { @class = "form-control numbers", @id = "txtiencoc3" })
                                <p class="help-block"> </p>
                            </div>

                            <div class="form-group">
                                <label for="actionnm">  Tiền cọc hoàn:</label>
                                @Html.TextBoxFor(model => model.tiencochoan, new { @class = "form-control numbers", @id = "txtiencochoan" })
                                <p class="help-block"> </p>
                            </div>

                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <div class="col-lg-12">

                            <div class="form-group">
                                <label for="actionnm">  Ghi chú:</label>
                                @Html.TextAreaFor(model => model.ghichu, 5, 25, new { @id = "txghichu", @class = "form-control" })
                                <p class="help-block"> </p>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <input type="button" id="btnEditHK" value="Lưu" class="btn btn-primary" />
                            <input type="button" class="btn btn-warning dongdmhk" value="Quay lại" />

                        </div>
                    </form>
                </div>
                <!-- /.row (nested) -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<script>
        $(function () {
            $(".date-picker").mask("99/99/9999");
        });

        $('.dongdmhk').on('click', function () {
            $('#ModalHK').hide(500);
            $('.dshk').show(500);
        });

    function LayDSHangkhong(id) {

        $.ajax({
            url: '/QLKhachDoan/LayDSHangkhong',
            data: { id: id },
            type: 'GET',
            success: function (data) {
                $('#tabhknd').html(data);
            }
        });
    }

    $('#btnEditHK').on('click', function () {
            debugger
            if ($('#frmHK').valid()) {

                var formData = new FormData();             
                formData.append("id", $('#hideditid').val());
                formData.append("idtour", $('#hidaddtourid').val());
                formData.append("sgtcode", $('#hidaddsgtcode').val());
                formData.append("mancc", $('#txmancc').val());
                formData.append("tenncc", $('#txtenncc').val());
                formData.append("iddv", $('#txdichvu').val());
                formData.append("hanhtrinh", $("#txhanhtrinh").val());
                formData.append("codebooking", $('#txcode').val());
                formData.append("loaibooking", $('#txloaibooking').val());
                formData.append("sochoxuatve", $('#txsochoxuatve').val());
                formData.append("tiencocphat", $('#txtiencocphat').val());
                formData.append("chococ1", $('#txchococ1').val());
                formData.append("tiencoc1", $('#txtiencoc1').val());
                formData.append("chococ2", $('#txchococ2').val());
                formData.append("tiencoc2", $('#txtiencoc2').val());
                formData.append("chococ3", $('#txchococ3').val());
                formData.append("tiencoc3", $('#txtiencoc3').val());
                formData.append("tiencochoan", $('#txtiencochoan').val());
                formData.append("ghichu", $('#txghichu').val());


                $.ajax({
                    cache: false,
                    type: 'POST',
                    data: formData,
                    url: "/QLKhachDoan/EditHK",
                    processData: false,
                    contentType: false,
                    dataType: "json",
                    success: function (response) {
                        debugger
                        if (response) {
                            var id = $('#hidaddtourid').val();//lay o trang nay                        /
                            LayDSHangkhong(id);
                        }
                    }
                });

            }

        });

</script>



